<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical"
              android:weightSum="100"
              tools:context="com.cooervo.filmography.controllers.activities.FilmsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="20"
        android:background="@color/blacktransparency"
        android:orientation="horizontal"
        android:weightSum="100">


        <ImageView
            android:id="@+id/actorProfileImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="30"/>

        <TextView
            android:id="@+id/actorNameLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="70"
            android:gravity="center_vertical"
            android:textSize="30sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/filmsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        />

</LinearLayout>
